            <div id="page-data-management" class="page active" style="text-align: center;">
                <!-- 页面数据管理页面内容 -->
                <h2 style="margin: 1% 1% auto; font-size: 200%;">页面数据管理</h2>
                <form id="page-base-data-form" action="#" method="post" enctype="multipart/form-data">
                    <h3 style="margin-top: 2%;margin-bottom: 2%; font-size: 150%;">首页</h3>
                    <!-- 企业简称 -->
                    <div class="form-group">
                        <input name="companySimpleName" type="text" id="company-simple-name" placeholder="请输入企业简称" maxlength="20">
                    </div>
                    <!-- 企业全称 -->
                    <div class="form-group">
                        <input name="companyFullName" type="text" id="company-full-name" placeholder="请输入企业全称" maxlength="50">
                    </div>
                    <!-- 企业口号 -->
                    <div class="form-group">
                        <input name="companySlogan" type="text" id="company-slogan" placeholder="请输入企业口号" maxlength="100">
                    </div>
                    <!-- 企业简介 -->
                    <div class="form-group">
                        <textarea id="company-profile" name="companyProfile" placeholder="请输入企业简介"
                            rows="5" cols="50"  style="width: 90%;" required maxlength="1000"></textarea>
                    </div>
                    <!-- 企业优势 -->
                    <div class="form-group">
                        <textarea id="company-advantage" name="companyAdvantage" placeholder="请输入企业优势"
                            rows="5" cols="50"  style="width: 90%;" required maxlength="2000"></textarea>
                    </div>
                    <!-- 版权年份 -->
                    <div class="form-group">
                        <label style="margin: 1% 1% auto; font-size: 120%;font-weight: bold;color: chocolate;">版权年份</label>
                        <select name="copyrightYear" id="copyright-year">
                            <option value="2013">2013</option>
                            <option value="2014">2014</option>
                            <option value="2015">2015</option>
                            <option value="2016">2016</option>
                            <option value="2017">2017</option>
                            <option value="2018">2018</option>
                            <option value="2019">2019</option>
                            <option value="2020">2020</option>
                            <option value="2021">2021</option>
                            <option value="2022">2022</option>
                            <option value="2023">2023</option>
                            <option value="2024">2024</option>
                            <option value="2025">2025</option>
                        </select>
                    </div>
                    <h3 style="margin: 1% 1% auto; font-size: 150%;">联系我们</h3>
                    <!-- 企业地址 -->
                    <div class="form-group">
                        <input name="companyAddress" type="text" id="company-address" placeholder="请输入企业地址" maxlength="100">
                    </div>
                    <!-- 联系电话 -->
                    <div class="form-group">
                        <input name="companyContact" type="text" id="company-contact" placeholder="请输入联系电话" required maxlength="50">
                    </div>
                    <!-- 电子邮箱 -->
                    <div class="form-group">
                        <input name="companyEmail" type="text" id="company-email" placeholder="请输入电子邮箱" required maxlength="50">
                    </div>
                    <!-- 工作时间 -->
                    <div class="form-group">
                        <input name="companyWorkTime" type="text" id="company-work-time" placeholder="请输入工作时间" required maxlength="50">
                    </div>
                    <!-- 首页宣传视频 -->
                    <div class="form-group">
                        <label for="promotional-video">更改首页宣传视频</label>
                        <input name="singleFile" type="file" id="promotional-video">
                    </div>
                    <button type="submit" style="color: aliceblue;background-color: rgb(29, 142, 222);">保存提交</button>
                </form>
            </div>
            <div id="cache-data-management" class="page">
                <!-- 页面数据管理页面内容 -->
                <h2>缓存管理</h2>
                <button id="update-items-cache">更新数据项缓存</button>
                <span id="update-Cache-status"></span>
