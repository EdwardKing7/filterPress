    <!-- 登录详情弹出框 -->
    <div id="login-detail-popup" style="display: none;">
        <h3>登录详情</h3>
        <p><strong>登录记录ID:</strong> <span id="detail-login-id"></span></p>
        <p><strong>用户名:</strong> <span id="detail-username"></span></p>
        <p><strong>登录时间:</strong> <span id="detail-login-time"></span></p>
        <p><strong>登录IP:</strong> <span id="detail-login-ip"></span></p>
        <button id="close-login-detail">关闭</button>
    </div>
    <!-- 账户编辑弹出框 -->
    <div id="account-edit-popup" style="display: none;">
        <h3>编辑账户信息</h3>
        <form id="account-edit-form">
            <input type="text" id="edit-account-username" placeholder="用户名">
            <input type="email" id="edit-account-email" placeholder="邮箱">
            <button type="submit">保存</button>
            <button id="close-account-edit">关闭</button>
        </form>
    </div>
    <!-- 角色编辑弹出框 -->
    <div id="role-edit-popup" style="display: none;">
        <h3>编辑角色信息</h3>
        <form id="role-edit-form">
            <input type="text" id="edit-role-code" placeholder="角色编码">
            <input type="text" id="edit-role-name" placeholder="角色名称">
            <textarea id="edit-role-permission" placeholder="权限描述"></textarea>
            <button type="submit">保存</button>
            <button id="close-role-edit">关闭</button>
        </form>
    </div>
    <!-- 文本编辑弹出框 -->
    <div id="text-edit-popup" style="display: none;">
        <h3>编辑文本</h3>
        <textarea id="edit-textarea"></textarea>
        <button id="save-edited-text">保存</button>
        <button id="close-text-edit">关闭</button>
    </div>
    <!-- 页脚 -->
